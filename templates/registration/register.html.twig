{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

  {% for flash_error in app.flashes('verify_email_error') %}
    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
  {% endfor %}
  <html>
    <head>
      <style>

        .btn-color {
          background-color: #0e1c36;
          color: #fff;

        }

        .profile-image-pic {
          height: 200px;
          width: 200px;
          object-fit: cover;
        }

        .cardbody-color {
          background-color: #ebf2fa;
        }

        a {
          text-decoration: none;
        }
      </style>
    </head>
    <body>

      <div class="container">
        <div class="row">
          <div class="col-md-6 offset-md-3">
            <h2 class="text-center text-dark mt-5">Singn up
            </h2>
            <div class="card-body cardbody-color p-lg-5">
              {{ form_start(registrationForm) }}

              <div class="mb-3">
                {{ form_row(registrationForm.firstName) }}

              </div>
              <div class="mb-3">
                {{ form_row(registrationForm.lastName) }}

              </div>
              <div class="mb-3">
                {{ form_row(registrationForm.username) }}

              </div>
              <div class="mb-3">
                {{ form_row(registrationForm.email) }}

              </div>
              <div class="mb-3">
                {{ form_row(registrationForm.password, {
            label: 'Password'
        }) }}
              </div>

              <div class="mb-3">

                {{ form_row(registrationForm.role) }}

              </div>

              <div class="text-center">
                <button type="submit" class="btn btn-color px-5 mb-5 w-100">Sign up</button>
              </div>

              {{ form_end(registrationForm) }}

              <div id="emailHelp" class="form-text text-center mb-5 text-dark">Vous Ã©tes inscrit
                <strong>
                  <a href="{{path('login')}}" class="text-dark fw-bold">
                    Se connecter
                  </a>
                </strong>
              </div>
            </form>
          </div>

        </div>
      </div>
    </div>

  {% endblock %}
